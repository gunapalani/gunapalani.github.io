---
import "../styles/global.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Blogs from "../components/blog/Blogs.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Primary Meta Tags -->
    <title>Gunasekaran Palani | Blogs</title>
    <meta name="title" content="Gunasekaran Palani | Blogs" />
    <meta
      name="description"
      content="Read my latest blogs on web development, Azure, Microsoft Teams, React, C#, and more. Tutorials, tips, and step-by-step guides for developers."
    />
    <meta
      name="keywords"
      content="Gunasekaran Palani, Blogs, Software Developer, Azure, React, C#, Microsoft Teams, Web Development, Node.js, JavaScript, TypeScript, Flutter, Full Stack Developer, Tutorials"
    />
    <meta name="author" content="Gunasekaran Palani" />
    <link rel="canonical" href="https://gunapalani.github.io/blogs" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://gunapalani.github.io/blogs" />
    <meta property="og:title" content="Gunasekaran Palani | Blogs" />
    <meta
      property="og:description"
      content="Read my latest blogs on web development, Azure, Microsoft Teams, React, C#, and more. Tutorials, tips, and step-by-step guides for developers."
    />
    <meta
      property="og:image"
      content="https://www.c-sharpcorner.com/UploadFile/AuthorImage/a603d720241104092535.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://gunapalani.github.io/blogs" />
    <meta property="twitter:title" content="Gunasekaran Palani | Blogs" />
    <meta
      property="twitter:description"
      content="Read my latest blogs on web development, Azure, Microsoft Teams, React, C#, and more. Tutorials, tips, and step-by-step guides for developers."
    />
    <meta
      property="twitter:image"
      content="https://www.c-sharpcorner.com/UploadFile/AuthorImage/a603d720241104092535.jpg"
    />

    <!-- SEO and Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="robots" content="index, follow" />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>

  <body>
    <Header />
    <Blogs />
    <Footer />
  </body>
  <script src="https://unpkg.com/aos@next/dist/aos.js" is:inline></script>
  <script is:inline>
    AOS.init();
  </script>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
