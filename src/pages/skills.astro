---
import "../styles/global.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Skills from "../components/skills/skills.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Gunasekaran Palani" />

    <title>Skills | Gunasekaran Palani - Full Stack Software Engineer</title>

    <meta
      name="title"
      content="Skills | Gunasekaran Palani - Full Stack Software Engineer"
    />
    <meta
      name="description"
      content="Explore the technical skills of Gunasekaran Palani, a Microsoft-certified Full Stack Software Engineer. Proficient in web and mobile development, cloud, DevOps, CI/CD, databases, animations, SEO, and modern frameworks."
    />
    <meta
      name="keywords"
      content="Gunasekaran Palani Skills, Web Development Skills, Full Stack Developer Skills, React, Angular, Flutter, Node.js, .NET Core, Python, Azure, Firebase, MongoDB, SQL, Tailwind CSS, Astro JS, Shopify Developer, Microsoft Teams Developer, Zoho Developer, Strapi, HubSpot CRM, Azure DevOps, Docker, NPM Package Creator, Power Platform, Power BI, Power Apps, Power Automate, SEO Specialist, GSAP, AOS"
    />

    <link rel="canonical" href="https://gunapalani.github.io/skills" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=1" />

    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://gunapalani.github.io/skills" />
    <meta
      property="og:title"
      content="Skills | Gunasekaran Palani - Full Stack Software Engineer"
    />
    <meta
      property="og:description"
      content="Technical skill set of Gunasekaran Palani: Full Stack Web & Mobile Development, Cloud, DevOps, CI/CD, SEO, Animations, and more."
    />
    <meta
      property="og:image"
      content="https://www.c-sharpcorner.com/UploadFile/AuthorImage/a603d720241104092535.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://gunapalani.github.io/skills" />
    <meta
      property="twitter:title"
      content="Skills | Gunasekaran Palani - Full Stack Software Engineer"
    />
    <meta
      property="twitter:description"
      content="Explore the technical skills and expertise of Gunasekaran Palani: Full Stack Development, Cloud, DevOps, CI/CD, SEO, Animations, and modern frameworks."
    />
    <meta
      property="twitter:image"
      content="https://www.c-sharpcorner.com/UploadFile/AuthorImage/a603d720241104092535.jpg"
    />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>

  <body>
    <Header />
    <Skills />
    <Footer />
  </body>
  <script src="https://unpkg.com/aos@next/dist/aos.js" is:inline></script>
  <script is:inline>
    AOS.init();
  </script>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
