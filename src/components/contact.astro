<section
  id="contact"
  class="py-20 bg-gradient-to-br from-[#0a0a0a] to-[#112240]"
>
  <div class="container mx-auto px-6">
    <!-- Heading -->
    <div class="text-center mb-16 contact-header">
      <p class="text-[#64ffda] font-medium mb-2">&lt; say hello /&gt;</p>
      <h2
        class="text-3xl md:text-4xl font-bold text-white mb-4 relative inline-block"
      >
        Get In Touch
        <span
          class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-16 h-1 bg-[#64ffda] rounded-full contact-underline"
        ></span>
      </h2>
      <p class="text-gray-400 max-w-xl mx-auto contact-description">
        I'm currently open to new opportunities. Whether you have a question or
        just want to say hi, I'll try my best to get back to you!
      </p>
    </div>

    <!-- Contact Form -->
    <div
      class="max-w-xl mx-auto bg-[#112240]/60 backdrop-blur-md p-8 rounded-xl shadow-lg contact-form"
    >
      <form id="contact-form-element">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-300 mb-2"
            >Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="John Doe"
          />
        </div>

        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-300 mb-2">Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="johndoe@email.com"
          />
        </div>

        <div>
          <label
            for="subject"
            class="block text-sm font-medium text-gray-300 mb-2">Subject</label
          >
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="Let's work together"
          />
        </div>

        <div>
          <label
            for="message"
            class="block text-sm font-medium text-gray-300 mb-2">Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="Write your message..."></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-[#64ffda] text-[#0a192f] font-semibold px-6 py-3 rounded-lg hover:bg-[#52e0c4] cursor-pointer transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg flex items-center justify-center gap-2"
          data-aos="fade-up"
          data-aos-duration="1000"
          id="submit-btn"
        >
          <span id="btn-text">ðŸš€ Send Message</span>
          <span id="btn-loader" class="hidden">
            <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </span>
        </button>
      </form>

      <!-- Loader -->
      <div id="loader" class="hidden text-center py-12">
        <div class="flex justify-center mb-4">
          <svg class="animate-spin h-12 w-12 text-[#64ffda]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <p class="text-gray-300">Sending your message...</p>
      </div>

      <!-- Success Message -->
      <div id="success-message" class="hidden text-center py-12">
        <div class="text-6xl mb-4">âœ¨</div>
        <h3 class="text-2xl font-bold text-[#64ffda] mb-3">Thank You!</h3>
        <p class="text-gray-300 mb-2">
          Your message has been sent successfully.
        </p>
        <p class="text-gray-400">I'll get back to you as soon as possible!</p>
      </div>

      <!-- Contact Info -->
      <div class="mt-12 space-y-4" data-aos="fade-up" data-aos-duration="1200">
        <div class="flex items-center gap-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-[#64ffda]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <a
            href="mailto:gunapalani19@outlook.com"
            class="text-gray-300 hover:text-[#64ffda] transition-colors"
            >gunapalani19@outlook.com</a
          >
        </div>

        <div class="flex items-center gap-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-[#64ffda]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          <a
            href="tel:+919751143913"
            class="text-gray-300 hover:text-[#64ffda] transition-colors"
            >+91 9751143913</a
          >
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    // EmailJS form submission
    const contactForm = document.querySelector(".contact-form form");
    const successMessage = document.getElementById("success-message");
    const loader = document.getElementById("loader");
    const submitBtn = document.getElementById("submit-btn");
    const btnText = document.getElementById("btn-text");
    const btnLoader = document.getElementById("btn-loader");
    
    if (contactForm && typeof emailjs !== "undefined") {
      contactForm.addEventListener("submit", function (event) {
        event.preventDefault();
        
        // Show button loader and disable button
        btnText.classList.add("hidden");
        btnLoader.classList.remove("hidden");
        submitBtn.disabled = true;

        // Send form using EmailJS
        emailjs.sendForm("service_0kjtrod", "template_wrgb8qu", this).then(
          () => {
            console.log("SUCCESS!");
            // Hide form and show success message
            contactForm.classList.add("hidden");
            loader.classList.add("hidden");
            successMessage.classList.remove("hidden");
            
            // Optional: Fade in success message with animation
            if (typeof gsap !== "undefined") {
              gsap.fromTo(
                successMessage,
                { opacity: 0, scale: 0.9 },
                { opacity: 1, scale: 1, duration: 0.6, ease: "back.out(1.7)" }
              );
            }
          },
          (error) => {
            console.log("FAILED...", error);
            // Hide loader and re-enable button
            btnText.classList.remove("hidden");
            btnLoader.classList.add("hidden");
            submitBtn.disabled = false;
            alert(
              "âŒ Failed to send message. Please try again or email directly."
            );
          }
        );
      });
    }

    if (typeof gsap !== "undefined" && typeof ScrollTrigger !== "undefined") {
      // Animate contact header
      gsap.fromTo(
        ".contact-header",
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".contact-header",
            start: "top 80%",
          },
        }
      ); // Animate underline
      gsap.fromTo(
        ".contact-underline",
        { width: 0 },
        {
          width: "4rem",
          duration: 0.6,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".contact-underline",
            start: "top 80%",
          },
        }
      );

      // Animate description
      gsap.fromTo(
        ".contact-description",
        { opacity: 0, y: 30 },
        {
          opacity: 1,
          y: 0,
          duration: 0.6,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".contact-description",
            start: "top 85%",
          },
        }
      );

      // Animate contact form
      gsap.fromTo(
        ".contact-form",
        {
          opacity: 0,
          scale: 0.9,
          y: 50,
        },
        {
          opacity: 1,
          scale: 1,
          y: 0,
          duration: 0.8,
          ease: "back.out(1.7)",
          scrollTrigger: {
            trigger: ".contact-form",
            start: "top 80%",
          },
        }
      );

      // Add focus animations to form inputs
      const inputs = document.querySelectorAll(
        ".contact-form input, .contact-form textarea"
      );
      inputs.forEach((input) => {
        input.addEventListener("focus", () => {
          gsap.to(input, {
            scale: 1.02,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        input.addEventListener("blur", () => {
          gsap.to(input, {
            scale: 1,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });

      // Add button hover animation
      const submitButton = document.querySelector(
        '.contact-form button[type="submit"]'
      );
      if (submitButton) {
        submitButton.addEventListener("mouseenter", () => {
          gsap.to(submitButton, {
            scale: 1.05,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        submitButton.addEventListener("mouseleave", () => {
          gsap.to(submitButton, {
            scale: 1,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      }
    }
  });
</script>
