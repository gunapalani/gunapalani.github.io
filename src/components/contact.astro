<section
  id="contact"
  class="py-20 bg-gradient-to-br from-[#0a0a0a] to-[#112240]"
>
  <div class="container mx-auto px-6">
    <!-- Heading -->
    <div class="text-center mb-16" data-aos="fade-up" data-aos-duration="1000">
      <p class="text-[#64ffda] font-medium mb-2">&lt; say hello /&gt;</p>
      <h2
        class="text-3xl md:text-4xl font-bold text-white mb-4 relative inline-block"
      >
        Get In Touch
        <span
          class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-16 h-1 bg-[#64ffda] rounded-full"
        ></span>
      </h2>
      <p class="text-gray-400 max-w-xl mx-auto">
        I'm currently open to new opportunities. Whether you have a question or
        just want to say hi, I'll try my best to get back to you!
      </p>
    </div>

    <!-- Contact Form -->
    <div
      class="max-w-xl mx-auto bg-[#112240]/60 backdrop-blur-md p-8 rounded-xl shadow-lg"
      data-aos="zoom-in-up"
      data-aos-duration="1200"
    >
      <form onsubmit="handleSubmit(event)">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-300 mb-2"
            >Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="John Doe"
          />
        </div>

        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-300 mb-2">Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="johndoe@email.com"
          />
        </div>

        <div>
          <label
            for="subject"
            class="block text-sm font-medium text-gray-300 mb-2">Subject</label
          >
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="Let's work together"
          />
        </div>

        <div>
          <label
            for="message"
            class="block text-sm font-medium text-gray-300 mb-2">Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 bg-[#0a192f] border border-[#233554] rounded-lg focus:border-[#64ffda] focus:ring-1 focus:ring-[#64ffda] text-white placeholder-gray-500 transition-colors"
            placeholder="Write your message..."></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-[#64ffda] text-[#0a192f] font-semibold px-6 py-3 rounded-lg hover:bg-[#52e0c4] transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg"
          data-aos="fade-up"
          data-aos-duration="1000"
        >
          ðŸš€ Send Message
        </button>
      </form>

      <!-- Contact Info -->
      <div class="mt-12 space-y-4" data-aos="fade-up" data-aos-duration="1200">
        <div class="flex items-center gap-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-[#64ffda]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <a
            href="mailto:gunapalani19@outlook.com"
            class="text-gray-300 hover:text-[#64ffda] transition-colors"
            >gunapalani19@outlook.com</a
          >
        </div>

        <div class="flex items-center gap-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-[#64ffda]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          <a
            href="tel:+919751143913"
            class="text-gray-300 hover:text-[#64ffda] transition-colors"
            >+91 9751143913</a
          >
        </div>
      </div>
    </div>
  </div>

  <script>
    function handleSubmit(event: any) {
      event.preventDefault();
      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData);
      console.log("Form data:", data);
      alert("âœ… Message Sent! I'll get back to you soon.");
    }
  </script>
</section>
