<section
  id="experience"
  class="py-20 bg-gradient-to-br from-[#0a0a0a] to-[#112240]"
>
  <p class="text-[#64ffda] font-medium mb-2 text-center">
    &lt; professional growth /&gt;
  </p>
  <div class="container mx-auto px-6">
    <!-- Heading with Icon -->
    <div
      class="text-center mb-16 experience-header flex items-center justify-center gap-4"
    >
      <h2 class="text-3xl md:text-4xl font-bold text-white">
        Experience <span
          class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-16 h-1 bg-[#64ffda] rounded-full certifications-underline"
        ></span>
      </h2>
    </div>
  </div>

  <!-- Timeline -->
  <div class="max-w-3xl mx-auto relative experience-timeline">
    <!-- Vertical Line -->
    <div
      class="absolute left-6 top-0 bottom-0 w-0.5 bg-gradient-to-b from-[#64ffda] to-[#112240] timeline-line"
    >
    </div>

    <!-- Software Developer (Current) -->
    <div class="mb-12 experience-item pl-32 relative">
      <div
        class="absolute left-6 top-6 w-5 h-5 bg-[#64ffda] rounded-full border-4 border-[#0a0a0a] timeline-dot"
      >
      </div>
      <div
        class="w-full bg-[#112240]/60 backdrop-blur-md p-6 rounded-lg border border-[#233554] hover:border-[#64ffda] transition-colors duration-300 experience-card"
      >
        <div class="flex items-start justify-between mb-3">
          <div>
            <h3 class="text-xl font-bold text-[#64ffda] mb-1">
              Software Developer
            </h3>
            <p class="text-gray-400 text-sm">
              Peninsular Research Operation, Chennai
            </p>
          </div>
          <span
            class="inline-block bg-[#64ffda]/20 text-[#64ffda] px-3 py-1 rounded-full font-semibold text-xs whitespace-nowrap ml-4"
            >Current</span
          >
        </div>
        <p class="text-gray-400 text-sm mb-3">Sep 2025 - Present</p>
        <ul class="text-gray-300 text-sm leading-relaxed space-y-2">
          <li class="flex gap-2">
            <span class="text-[#64ffda]">•</span>
            <span
              >Developing full-stack applications using Angular, React, Node.js,
              .NET Core, and MongoDB.</span
            >
          </li>
          <li class="flex gap-2">
            <span class="text-[#64ffda]">•</span>
            <span
              >Leading the Reward Rally gamification platform, Azure
              integrations, and interactive dashboards.</span
            >
          </li>
          <li class="flex gap-2">
            <span class="text-[#64ffda]">•</span>
            <span
              >Mentoring junior developers and managing reusable packages for
              React, Angular, and Flutter.</span
            >
          </li>
        </ul>
        <div class="mt-4 flex flex-wrap gap-2">
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >C#</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Node JS</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >.NET Core</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Azure</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >React</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Angular</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Mongo DB</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >SSMS</span
          >
        </div>
      </div>
    </div>

    <!-- Junior Software Developer -->
    <div class="mb-12 experience-item pl-32 relative">
      <div
        class="absolute left-6 top-6 w-5 h-5 bg-[#64ffda] rounded-full border-4 border-[#0a0a0a] timeline-dot"
      >
      </div>
      <div
        class="w-full bg-[#112240]/60 backdrop-blur-md p-6 rounded-lg border border-[#233554] hover:border-[#64ffda] transition-colors duration-300 experience-card"
      >
        <div class="flex items-start justify-between mb-3">
          <div>
            <h3 class="text-xl font-bold text-[#64ffda] mb-1">
              Junior Software Developer
            </h3>
            <p class="text-gray-400 text-sm">
              Peninsular Research Operation, Chennai
            </p>
          </div>
        </div>
        <p class="text-gray-400 text-sm mb-3">Sep 2022 - Aug 2025 · 3 years</p>
        <ul class="text-gray-300 text-sm leading-relaxed space-y-2">
          <li class="flex gap-2">
            <span class="text-[#64ffda]">•</span>
            <span
              >Built full-stack applications using Angular, React, Node.js, .NET
              Core, and MongoDB.</span
            >
          </li>
          <li class="flex gap-2">
            <span class="text-[#64ffda]">•</span>
            <span
              >Contributed to Reward Rally platform and Azure-based deployments.</span
            >
          </li>
          <li class="flex gap-2">
            <span class="text-[#64ffda]">•</span>
            <span>Assisted in developing dashboards and reusable packages.</span
            >
          </li>
        </ul>
        <div class="mt-4 flex flex-wrap gap-2">
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Angular</span
          >

          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >React</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Node.js</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Flutter</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >Mongo DB</span
          >
          <span
            class="inline-block bg-[#233554]/50 text-[#64ffda] px-2 py-1 rounded text-xs"
            >SSMS</span
          >
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    if (typeof gsap !== "undefined" && typeof ScrollTrigger !== "undefined") {
      // Animate experience header
      gsap.fromTo(
        ".experience-header",
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".experience-header",
            start: "top 80%",
          },
        }
      );

      // Animate timeline line
      gsap.fromTo(
        ".experience-timeline .timeline-line",
        { height: 0 },
        {
          height: "100%",
          duration: 1,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".experience-timeline",
            start: "top 70%",
          },
        }
      );

      // Animate experience items
      gsap.fromTo(
        ".experience-item",
        { opacity: 0, x: 50 },
        {
          opacity: 1,
          x: 0,
          duration: 0.6,
          stagger: 0.15,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".experience-timeline",
            start: "top 70%",
          },
        }
      );

      // Hover effect for cards
      const cards = document.querySelectorAll(".experience-card");
      cards.forEach((card) => {
        card.addEventListener("mouseenter", () => {
          gsap.to(card, {
            y: -5,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        card.addEventListener("mouseleave", () => {
          gsap.to(card, {
            y: 0,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });

      // Pulse animation for timeline dots
      gsap.to(".experience-timeline .timeline-dot", {
        boxShadow:
          "0 0 10px rgba(100, 255, 218, 0.5), 0 0 20px rgba(100, 255, 218, 0.3)",
        duration: 2,
        repeat: -1,
        yoyo: true,
      });
    }
  });
</script>

<style>
  .experience-timeline {
    position: relative;
    min-height: 100%;
  }

  .experience-timeline .timeline-line {
    position: absolute !important;
    left: 1.5rem !important;
    top: -2rem !important;
    bottom: -2rem !important;
    width: 2px !important;
    height: auto !important;
    z-index: 0;
  }

  .experience-item {
    position: relative;
    display: flex;
    margin-bottom: 2rem;
  }

  .experience-timeline .timeline-dot {
    position: absolute;
    left: 1.5rem;
    top: 1.5rem;
    transform: translateX(-50%);
    z-index: 10;
    width: 1.25rem;
    height: 1.25rem;
    background-color: #64ffda;
    border: 4px solid #0a0a0a;
    border-radius: 9999px;
  }

  .experience-card {
    flex: 1;
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .experience-timeline .timeline-line {
      left: 1.5rem !important;
      top: -1rem !important;
      bottom: -1rem !important;
    }

    .experience-item {
      padding-left: 2rem;
    }

    .experience-timeline .timeline-dot {
      left: 1.5rem;
      transform: translateX(-50%);
    }

    .experience-card {
      width: 100%;
    }
  }
</style>
