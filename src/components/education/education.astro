<section
  id="education"
  class="py-20 bg-gradient-to-br from-[#0a0a0a] to-[#112240]"
>
  <p class="text-[#64ffda] font-medium mb-2 text-center">
    &lt; my qualifications /&gt;
  </p>
  <div class="container mx-auto px-6">
    <!-- Heading with Icon -->
    <div
      class="text-center mb-16 education-header flex items-center justify-center gap-4"
    >
      <h2 class="text-3xl md:text-4xl font-bold text-white">
        Education <span
          class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-16 h-1 bg-[#64ffda] rounded-full certifications-underline"
        ></span>
      </h2>
    </div>

    <!-- Timeline -->
    <div class="max-w-3xl mx-auto relative education-timeline">
      <!-- Vertical Line -->
      <div
        class="absolute left-6 top-0 bottom-0 w-0.5 bg-gradient-to-b from-[#64ffda] to-[#112240] timeline-line"
      >
      </div>

      <!-- MCA -->
      <div class="mb-12 education-item pl-32 relative">
        <div
          class="absolute left-6 top-6 w-5 h-5 bg-[#64ffda] rounded-full border-4 border-[#0a0a0a] timeline-dot"
        >
        </div>
        <div
          class="w-full bg-[#112240]/60 backdrop-blur-md p-6 rounded-lg border border-[#233554] hover:border-[#64ffda] transition-colors duration-300 education-card"
        >
          <h3 class="text-xl font-bold text-[#64ffda] mb-1">MCA</h3>
          <p class="text-gray-400 text-sm mb-3">2025</p>
          <p class="text-gray-300 text-sm leading-relaxed">
            Master of Computer Applications from University of Madras. Gained
            expertise in advanced programming, data structures, and software
            engineering principles.
          </p>
          <div class="mt-4">
            <span
              class="inline-block bg-[#64ffda]/20 text-[#64ffda] px-3 py-1 rounded-full font-semibold text-xs"
              >92%</span
            >
          </div>
        </div>
      </div>

      <!-- BCA -->
      <div class="mb-12 education-item pl-32 relative">
        <div
          class="absolute left-6 top-6 w-5 h-5 bg-[#64ffda] rounded-full border-4 border-[#0a0a0a] timeline-dot"
        >
        </div>
        <div
          class="w-full bg-[#112240]/60 backdrop-blur-md p-6 rounded-lg border border-[#233554] hover:border-[#64ffda] transition-colors duration-300 education-card"
        >
          <h3 class="text-xl font-bold text-[#64ffda] mb-1">BCA</h3>
          <p class="text-gray-400 text-sm mb-3">2022</p>
          <p class="text-gray-300 text-sm leading-relaxed">
            Bachelor of Computer Applications from Aringer Anna Arts & Science
            College, Thiruvalluvar University. Foundation in computer science,
            programming, and web technologies.
          </p>
          <div class="mt-4">
            <span
              class="inline-block bg-[#64ffda]/20 text-[#64ffda] px-3 py-1 rounded-full font-semibold text-xs"
              >77%</span
            >
          </div>
        </div>
      </div>

      <!-- H.S.C. -->
      <div class="mb-12 education-item pl-32 relative">
        <div
          class="absolute left-6 top-6 w-5 h-5 bg-[#64ffda] rounded-full border-4 border-[#0a0a0a] timeline-dot"
        >
        </div>
        <div
          class="w-full bg-[#112240]/60 backdrop-blur-md p-6 rounded-lg border border-[#233554] hover:border-[#64ffda] transition-colors duration-300 education-card"
        >
          <h3 class="text-xl font-bold text-[#64ffda] mb-1">H.S.C.</h3>
          <p class="text-gray-400 text-sm mb-3">2019</p>
          <p class="text-gray-300 text-sm leading-relaxed">
            Higher Secondary Certificate from GHS School, State Board. Completed
            foundational studies in science and mathematics, preparing for
            higher education in computer science.
          </p>
          <div class="mt-4">
            <span
              class="inline-block bg-[#64ffda]/20 text-[#64ffda] px-3 py-1 rounded-full font-semibold text-xs"
              >62%</span
            >
          </div>
        </div>
      </div>

      <!-- S.S.L.C. -->
      <div class="education-item pl-32 relative">
        <div
          class="absolute left-6 top-6 w-5 h-5 bg-[#64ffda] rounded-full border-4 border-[#0a0a0a] timeline-dot"
        >
        </div>
        <div
          class="w-full bg-[#112240]/60 backdrop-blur-md p-6 rounded-lg border border-[#233554] hover:border-[#64ffda] transition-colors duration-300 education-card"
        >
          <h3 class="text-xl font-bold text-[#64ffda] mb-1">S.S.L.C.</h3>
          <p class="text-gray-400 text-sm mb-3">2017</p>
          <p class="text-gray-300 text-sm leading-relaxed">
            Secondary School Leaving Certificate from GHS School, State Board.
            Completed primary and secondary education, establishing a strong
            academic foundation.
          </p>
          <div class="mt-4">
            <span
              class="inline-block bg-[#64ffda]/20 text-[#64ffda] px-3 py-1 rounded-full font-semibold text-xs"
              >76.6%</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    if (typeof gsap !== "undefined" && typeof ScrollTrigger !== "undefined") {
      // Animate education header
      gsap.fromTo(
        ".education-header",
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".education-header",
            start: "top 80%",
          },
        }
      );

      // Animate timeline line
      gsap.fromTo(
        ".timeline-line",
        { height: 0 },
        {
          height: "100%",
          duration: 1,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".education-timeline",
            start: "top 70%",
          },
        }
      );

      // Animate education items alternately
      gsap.fromTo(
        ".education-item",
        { opacity: 0, x: (i) => (i % 2 === 0 ? 50 : -50) },
        {
          opacity: 1,
          x: 0,
          duration: 0.6,
          stagger: 0.15,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".education-timeline",
            start: "top 70%",
          },
        }
      );

      // Hover effect for cards
      const cards = document.querySelectorAll(".education-card");
      cards.forEach((card) => {
        card.addEventListener("mouseenter", () => {
          gsap.to(card, {
            y: -5,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        card.addEventListener("mouseleave", () => {
          gsap.to(card, {
            y: 0,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });

      // Pulse animation for timeline dots
      gsap.to(".timeline-dot", {
        boxShadow:
          "0 0 10px rgba(100, 255, 218, 0.5), 0 0 20px rgba(100, 255, 218, 0.3)",
        duration: 2,
        repeat: -1,
        yoyo: true,
      });
    }
  });
</script>

<style>
  .education-timeline {
    position: relative;
    min-height: 100%;
  }

  .timeline-line {
    position: absolute !important;
    left: 1.5rem !important;
    top: -2rem !important;
    bottom: -2rem !important;
    width: 2px !important;
    height: auto !important;
    z-index: 0;
  }

  .education-item {
    position: relative;
    display: flex;
    margin-bottom: 2rem;
  }

  .timeline-dot {
    position: absolute;
    left: 1.5rem;
    top: 1.5rem;
    transform: translateX(-50%);
    z-index: 10;
    width: 1.25rem;
    height: 1.25rem;
    background-color: #64ffda;
    border: 4px solid #0a0a0a;
    border-radius: 9999px;
  }

  .education-card {
    flex: 1;
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .timeline-line {
      left: 1.5rem !important;
      top: -1rem !important;
      bottom: -1rem !important;
    }

    .education-item {
      padding-left: 2rem;
    }

    .timeline-dot {
      left: 1.5rem;
      transform: translateX(-50%);
    }

    .education-card {
      width: 100%;
    }
  }
</style>
