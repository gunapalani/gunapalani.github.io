    animation-duration: 14s;
  }
  .code-particle:nth-child(20) {
    left: 58%;
    animation-delay: -19s;
    animation-duration: 20s;
  }

  @keyframes float-code {
    0% {
      transform: translateY(100vh) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100px) rotate(360deg);
      opacity: 0;
    }
  }

  /* Binary Rain Effect */
  .binary-rain {
    pointer-events: none;
    opacity: 0.05;
  }

  .binary-column {
    position: absolute;
    top: 0;
    width: 2px;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(100, 255, 218, 0.5),
      rgba(100, 255, 218, 0.8),
      rgba(100, 255, 218, 0.5),
      transparent
    );
    animation: binary-fall 3s infinite linear;
  }

  .binary-column:nth-child(1) {
    left: 5%;
    animation-delay: 0s;
  }
  .binary-column:nth-child(2) {
    left: 15%;
    animation-delay: -0.5s;
  }
  .binary-column:nth-child(3) {
    left: 25%;
    animation-delay: -1s;
  }
  .binary-column:nth-child(4) {
    left: 35%;
    animation-delay: -1.5s;
  }
  .binary-column:nth-child(5) {
    left: 45%;
    animation-delay: -2s;
  }
  .binary-column:nth-child(6) {
    left: 55%;
    animation-delay: -2.5s;
  }
  .binary-column:nth-child(7) {
    left: 65%;
    animation-delay: -1.2s;
  }
  .binary-column:nth-child(8) {
    left: 75%;
    animation-delay: -1.8s;
  }
  .binary-column:nth-child(9) {
    left: 85%;
    animation-delay: -0.8s;
  }
  .binary-column:nth-child(10) {
    left: 95%;
    animation-delay: -2.2s;
  }

  @keyframes binary-fall {
    0% {
      transform: translateY(-100%);
      height: 0%;
    }
    50% {
      height: 100%;
    }
    100% {
      transform: translateY(100%);
      height: 0%;
    }
  }

  /* Geometric Patterns */
  .geometric-bg {
    pointer-events: none;
    opacity: 0.05;
  }

  .geo-shape {
    position: absolute;
    border: 2px solid #64ffda;
    animation: geo-rotate 30s infinite linear;
  }

  .geo-triangle {
    width: 0;
    height: 0;
    border-left: 25px solid transparent;
    border-right: 25px solid transparent;
    border-bottom: 50px solid rgba(100, 255, 218, 0.1);
    border: none;
    top: 15%;
    right: 10%;
    animation: geo-float 25s infinite ease-in-out;
  }

  .geo-triangle::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 0;
    height: 0;
    border-left: 25px solid transparent;
    border-right: 25px solid transparent;
    border-bottom: 50px solid rgba(100, 255, 218, 0.1);
  }

  .geo-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    top: 70%;
    left: 15%;
    animation: geo-pulse 20s infinite ease-in-out;
  }

  .geo-square {
    width: 60px;
    height: 60px;
    top: 25%;
    left: 75%;
    animation: geo-rotate 35s infinite linear reverse;
  }

  .geo-triangle-2 {
    width: 0;
    height: 0;
    border-left: 30px solid transparent;
    border-right: 30px solid transparent;
    border-top: 60px solid rgba(100, 255, 218, 0.08);
    border-bottom: none;
    top: 60%;
    right: 20%;
    animation: geo-float 28s infinite ease-in-out reverse;
  }

  .geo-circle-2 {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    top: 40%;
    left: 5%;
    animation: geo-pulse 22s infinite ease-in-out reverse;
  }

  @keyframes geo-rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes geo-float {
    0%,
    100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-30px) scale(1.1);
    }
  }

  @keyframes geo-pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.05;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.15;
    }
  }

  /* 3D Rotating Code Cube Styles */
  .code-cube-container {
    position: absolute;
    top: 85%;
    right: 0%;
    transform: translateY(-50%);
    perspective: 1000px;
    z-index: 1;
  }

  .code-cube {
    position: relative;
    width: 200px;
    height: 200px;
    transform-style: preserve-3d;
    animation: cube-rotate 20s infinite linear;
  }

  .cube-face {
    position: absolute;
    width: 200px;
    height: 200px;
    background: rgba(17, 34, 64, 0.8);
    border: 1px solid rgba(100, 255, 218, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Courier New", monospace;
    font-size: 10px;
    color: #64ffda;
    backdrop-filter: blur(5px);
    padding: 10px;
    box-sizing: border-box;
  }

  .cube-face pre {
    margin: 0;
    text-align: center;
    line-height: 1.2;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .cube-face.front {
    transform: translateZ(100px);
  }

  .cube-face.back {
    transform: translateZ(-100px) rotateY(180deg);
  }

  .cube-face.right {
    transform: rotateY(90deg) translateZ(100px);
  }

  .cube-face.left {
    transform: rotateY(-90deg) translateZ(100px);
  }

  .cube-face.top {
    transform: rotateX(90deg) translateZ(100px);
  }

  .cube-face.bottom {
    transform: rotateX(-90deg) translateZ(100px);
  }

  @keyframes cube-rotate {
    0% {
      transform: rotateX(0deg) rotateY(0deg);
    }
    25% {
      transform: rotateX(90deg) rotateY(0deg);
    }
    50% {
      transform: rotateX(90deg) rotateY(90deg);
    }
    75% {
      transform: rotateX(0deg) rotateY(90deg);
    }
    100% {
      transform: rotateX(0deg) rotateY(0deg);
    }
  }

  /* Interactive Console Styles */
  .interactive-console {
    bottom: 20px;
    left: 20px;
    width: 400px;
    max-width: 90vw;
    background: rgba(13, 17, 23, 0.95);
    border: 1px solid rgba(100, 255, 218, 0.3);
    border-radius: 8px;
    backdrop-filter: blur(10px);
    z-index: 10;
    font-family: "Courier New", monospace;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .console-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 12px;
    background: rgba(30, 30, 30, 0.8);
    border-bottom: 1px solid rgba(100, 255, 218, 0.2);
    border-radius: 7px 7px 0 0;
  }

  .console-controls {
    display: flex;
    gap: 6px;
  }

  .console-btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .console-btn.close {
    background: #ff5f57;
  }

  .console-btn.minimize {
    background: #ffbd2e;
  }

  .console-btn.maximize {
    background: #28ca42;
  }

  .console-title {
    color: #8b949e;
    font-size: 12px;
    text-align: center;
    flex-grow: 1;
  }

  .console-body {
    padding: 12px;
    min-height: 100px;
    max-height: 200px;
    overflow-y: auto;
  }

  .console-line {
    color: #64ffda;
    font-size: 14px;
    margin-bottom: 4px;
    display: flex;
    align-items: center;
