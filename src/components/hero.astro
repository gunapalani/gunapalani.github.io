<style>
  .typewriter > .wrap {
    border-right: 0.08em solid #64ffda;
    animation: blink-caret 0.75s step-end infinite;
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: #64ffda;
    }
  }

  /* Name cursor blinking effect */
  .name-cursor {
    color: #64ffda;
    animation: blink-name-cursor 1s infinite;
    font-weight: normal;
    margin-left: 2px;
  }

  @keyframes blink-name-cursor {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }

  /* Developer Background Animations */

  /* Code Particles */
  .code-particles {
    pointer-events: none;
  }

  .code-particle {
    position: absolute;
    color: rgba(100, 255, 218, 0.1);
    font-family: "Courier New", monospace;
    font-size: 14px;
    font-weight: bold;
    animation: float-code 15s infinite linear;
  }

  .code-particle::before {
    content: attr(data-code);
  }

  .code-particle:nth-child(1) {
    left: 10%;
    animation-delay: 0s;
    animation-duration: 20s;
  }
  .code-particle:nth-child(2) {
    left: 20%;
    animation-delay: -2s;
    animation-duration: 18s;
  }
  .code-particle:nth-child(3) {
    left: 30%;
    animation-delay: -4s;
    animation-duration: 22s;
  }
  .code-particle:nth-child(4) {
    left: 40%;
    animation-delay: -6s;
    animation-duration: 16s;
  }
  .code-particle:nth-child(5) {
    left: 50%;
    animation-delay: -8s;
    animation-duration: 19s;
  }
  .code-particle:nth-child(6) {
    left: 60%;
    animation-delay: -10s;
    animation-duration: 21s;
  }
  .code-particle:nth-child(7) {
    left: 70%;
    animation-delay: -12s;
    animation-duration: 17s;
  }
  .code-particle:nth-child(8) {
    left: 80%;
    animation-delay: -14s;
    animation-duration: 23s;
  }
  .code-particle:nth-child(9) {
    left: 15%;
    animation-delay: -16s;
    animation-duration: 15s;
  }
  .code-particle:nth-child(10) {
    left: 25%;
    animation-delay: -18s;
    animation-duration: 20s;
  }
  .code-particle:nth-child(11) {
    left: 35%;
    animation-delay: -1s;
    animation-duration: 24s;
  }
  .code-particle:nth-child(12) {
    left: 45%;
    animation-delay: -3s;
    animation-duration: 16s;
  }
  .code-particle:nth-child(13) {
    left: 55%;
    animation-delay: -5s;
    animation-duration: 18s;
  }
  .code-particle:nth-child(14) {
    left: 65%;
    animation-delay: -7s;
    animation-duration: 22s;
  }
  .code-particle:nth-child(15) {
    left: 75%;
    animation-delay: -9s;
    animation-duration: 19s;
  }
  .code-particle:nth-child(16) {
    left: 85%;
    animation-delay: -11s;
    animation-duration: 21s;
  }
  .code-particle:nth-child(17) {
    left: 12%;
    animation-delay: -13s;
    animation-duration: 17s;
  }
  .code-particle:nth-child(18) {
    left: 28%;
