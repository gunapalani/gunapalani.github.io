        result:
          "total 12\ndrwxr-xr-x  JavaScript  React  Node.js\ndrwxr-xr-x  TypeScript  Angular  Vue.js\ndrwxr-xr-x  Python  C#  .NET\ndrwxr-xr-x  AWS  Azure  Docker",
        type: "success",
      },
      {
        command: "cat experience.txt",
        result:
          "💼 3+ years in software development\n🚀 Built 50+ web applications\n☁️ Microsoft Certified Professional\n📱 Mobile & Web specialist",
        type: "info",
      },
      {
        command: "git status",
        result:
          "On branch master\nYour portfolio is up to date with 'origin/master'.\n\nnothing to commit, working tree clean ✅",
        type: "success",
      },
      {
        command: "npm run build",
        result:
          "Building production bundle...\n✅ Compiled successfully in 2.34s\n📦 Bundle size: 245kb\n🚀 Ready to deploy!",
        type: "success",
      },
      {
        command: "docker ps",
        result:
          "CONTAINER ID   IMAGE          STATUS\n1a2b3c4d5e6f   portfolio:v1   Up 2 hours\n7g8h9i0j1k2l   nginx:alpine   Up 2 hours",
        type: "info",
      },
    ];

    let currentCommandIndex = 0;

    function typeCommand(text, callback) {
      const commandEl = document.getElementById("current-command");
      let i = 0;

      function typeChar() {
        if (i < text.length) {
          commandEl.textContent += text.charAt(i);
          i++;
          setTimeout(typeChar, 50 + Math.random() * 50);
        } else {
          setTimeout(callback, 500);
        }
      }

      commandEl.textContent = "";
      typeChar();
    }

    function showResult(result, type) {
      const resultEl = document.getElementById("command-result");
      resultEl.textContent = result;
      resultEl.className = `console-result ${type}`;

      setTimeout(() => {
        resultEl.textContent = "";
        nextCommand();
      }, 3000);
    }

    function nextCommand() {
      if (currentCommandIndex < commands.length) {
        const cmd = commands[currentCommandIndex];
        currentCommandIndex++;

        typeCommand(cmd.command, () => {
          showResult(cmd.result, cmd.type);
        });
      } else {
        currentCommandIndex = 0;
        setTimeout(() => {
          nextCommand();
        }, 2000);
      }
    }

    // Start the interactive console after a delay
    setTimeout(() => {
      nextCommand();
    }, 3000);
  };
