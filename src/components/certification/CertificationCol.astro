  data-aos="zoom-in-up"
  data-aos-duration="500"
>
  <div class="flex items-center gap-3">
    <img src={img} alt={title} class="w-20  h-20 rounded-md" />
    <div>
      <div class="font-bold text-white mb-1">{title}</div>
      <p class="text-gray-400 text-sm">{desc}</p>
    </div>
  </div>
  <div class="mt-3 text-right">
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="text-[#64ffda] text-sm hover:underline"
